<resources>

    <style name="Widget.Theme.SakeWoNomu.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="ButtonStyleBase">
        <item name="android:padding">0dp</item>
        <item name="android:textColor">#FFFCF2E8</item>
        <item name="android:fontFamily">@font/title_font</item>
    </style>
    <style name="ButtonStyle.NormalButton" parent="ButtonStyleBase">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/button_background</item>
    </style>
    <style name="ButtonStyle.WarningButton" parent="ButtonStyleBase">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/warning_button_background</item>
        <item name="android:textColor">@color/delete_button_text_color</item>
    </style>
    <style name="ButtonStyle.MainButton" parent="ButtonStyleBase">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="TextStyleBase">
        <item name="android:fontFamily">@font/bold_text_font</item>
    </style>
    <style name="TextStyle.XLarge" parent="TextStyleBase">
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/normal_text_font</item>
    </style>
    <style name="TextStyle.XLarge.Bold" parent="TextStyle.XLarge">
        <item name="android:fontFamily">@font/bold_text_font</item>
    </style>
    <style name="TextStyle.XLarge.Thin" parent="TextStyle.XLarge">
        <item name="android:fontStyle">italic</item>
    </style>
    <style name="TextStyle.Large" parent="TextStyleBase">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/normal_text_font</item>
    </style>
    <style name="TextStyle.Large.Bold" parent="TextStyle.Large">
        <item name="android:fontFamily">@font/bold_text_font</item>
    </style>
    <style name="TextStyle.Large.Thin" parent="TextStyle.Large">
        <item name="android:fontStyle">italic</item>
    </style>
    <style name="TextStyle.Mid" parent="TextStyleBase">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/normal_text_font</item>
    </style>
    <style name="TextStyle.Mid.Bold" parent="TextStyle.Mid">
        <item name="android:fontFamily">@font/bold_text_font</item>
    </style>
    <style name="TextStyle.Mid.Thin" parent="TextStyle.Mid">
        <item name="android:fontStyle">italic</item>
    </style>
    <style name="TextStyle.Small" parent="TextStyleBase">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/normal_text_font</item>
    </style>
    <style name="TextStyle.Small.Bold" parent="TextStyle.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/bold_text_font</item>
    </style>
    <style name="TextStyle.Small.Thin" parent="TextStyle.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:fontStyle">italic</item>
    </style>
    <style name="TextStyle.XSmall" parent="TextStyleBase">
        <item name="android:textSize">10sp</item>
        <item name="android:fontStyle">italic</item>
        <item name="android:fontFamily">@font/normal_text_font</item>
    </style>
    <style name="TextStyle.XSmall.Bold" parent="TextStyle.XSmall">
        <item name="android:fontFamily">@font/bold_text_font</item>
    </style>
    <style name="TextStyle.XSmall.Thin" parent="TextStyle.XSmall">
        <item name="android:fontStyle">italic</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textColorHint">@color/hint_text_color</item>
        <item name="android:background">@drawable/dl010_textfield_default</item>
        <item name="android:fontFamily">@font/normal_text_font</item>
    </style>

    <style name="StartPointLabel" parent="TextStyle.Mid.Bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="SelectPointView" parent="TextStyle.Mid.Bold">
        <item name="android:background">@drawable/point_view_background</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textColor">@color/not_selected_text_color</item>
        <item name="background">@drawable/point_button_background_not_selected</item>
    </style>

    <style name="RadioButton" parent="TextStyle.Mid">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CheckBox" parent="TextStyle.Mid">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>